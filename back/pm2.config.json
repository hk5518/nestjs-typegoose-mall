{
    "apps": {
        "name": "nestjs-typegoose-shop",
        "script": "./dist/apps/admin/main.js",
        "watch": true,
        "instances": 2,
        "exec_mode": "cluster",
        "ignore_watch": [
            "node_modules",
            "logs"
        ],
        "error_file": "logs/err.log",
        "out_file": "logs/out.log",
        "merge_logs": true,
        "log_date_format": "YYYY-MM-DD HH:mm:ss",
        "env": {
            "PM2_SERVE_PATH": "./public"
        }
    }
}